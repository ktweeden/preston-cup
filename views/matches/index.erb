        <td><%= match.date %></td>
        <td><%= match.game.name %></td>
        <td>
          <ul><% match.players.each do |player| %>
            <li><%= player.name %><%= match.player_is_winner?(player.id) ? ' ðŸŒŸ' : '' %></li>
          <% end %></ul>
        </td>
